<span class="user">
  <span class="user-avatar">
    <% unless user == nil %>
    <% if user.name == @event.user.name %>
      <%= image_tag(user_avatar(user), class: 'img-icon-author') %>
    <% else %>
      <%= image_tag(user_avatar(user), class: 'img-icon-sm') %>
    <% end %>
    <% end %>
  </span>

  <span class="user-name">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
  
</span>
